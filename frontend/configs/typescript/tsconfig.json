{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "../../",
    "paths": {
      "assets/*": ["assets/*"],

      "ui/*": ["source/app/ui/*"],

      "components/*": ["source/app/ui/components/*"],
      "pages/*": ["source/app/ui/pages/*"],
      "layout/*": ["source/app/ui/layout/*"],
      "main/*": ["source/app/ui/main/*"],

      "scripts/*": ["source/app/scripts/*"],
      "helpers/*": ["source/app/scripts/helpers/*"]
    }
  },
  "include": [
    "source"
  ],
  "types": [
    "source/app/types/**/*.d.ts"
  ]
}
